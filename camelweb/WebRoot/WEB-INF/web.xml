  	<servlet>
    	<servlet-name>EntryServlet</servlet-name>
    	<servlet-class>com.starit.servlet.EntryServlet</servlet-class>
  	</servlet>
  	<servlet-mapping>
    	<servlet-name>EntryServlet</servlet-name>
    	<url-pattern>/services/entry</url-pattern>
  	</servlet-mapping>
  	
	<servlet>
		<servlet-name>removeBean</servlet-name>
		<servlet-class>com.starit.servlet.RemovreEndpointServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>removeBean</servlet-name>
		<url-pattern>/removeBean/*</url-pattern>
	</servlet-mapping>
	
	<!-- javamelody start -->
	<filter>
		<filter-name>monitoring</filter-name>
        <filter-class>net.bull.javamelody.MonitoringFilter</filter-class>
	</filter>
    <filter-mapping>
    	<filter-name>monitoring</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
            <listener-class>net.bull.javamelody.SessionListener</listener-class>
    </listener>
    <!-- javamelody end -->
</web-app>
